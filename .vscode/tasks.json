{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cargo Leptos Watch",
            "type": "shell",
            "command": "cargo",
            "args": ["leptos", "watch"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/examples/leptos-animate-test"
            },
            // "problemMatcher": [
            //     "$rustc-watch"
            // ],
            "isBackground": true,
        }
    ]
}